<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="@dimen/_55sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatarUserItem"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/profile" />

    <ImageView
        android:id="@+id/imgStatusItem"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_toRightOf="@id/imgAvatarUserItem"
        android:layout_alignBottom="@id/imgAvatarUserItem"
        android:layout_marginLeft="-20dp"
        />
    <TextView
        android:text="Unknown"
        android:id="@+id/tvUsernameItem"
        android:layout_toRightOf="@id/imgAvatarUserItem"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_toRightOf="@id/imgAvatarUserItem"
        android:layout_below="@id/tvUsernameItem"
        android:text="Hello Friend"
        android:fontFamily="@font/medium"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgStatusSeen"
        android:layout_below="@id/tvUsernameItem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp">

    </de.hdodenhof.circleimageview.CircleImageView>
</RelativeLayout>