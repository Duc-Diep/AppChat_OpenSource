<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/layoutUserInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatarUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"/>
        <ImageView
            android:id="@+id/imgChooseImg"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/imgAvatarUser"
            android:layout_marginTop="@dimen/_118sdp"
            android:layout_width="@dimen/_30sdp"
            android:src="@drawable/ic_baseline_image_24"
            android:layout_height="@dimen/_30sdp"/>
        <EditText
            android:id="@+id/edtUsernameInfor"
            android:fontFamily="@font/bold"
            android:layout_below="@id/imgAvatarUser"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:inputType="none"
            android:text="Đức Điệp"
            android:textSize="@dimen/_18sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="Deprecated" />
        <ImageView
            android:id="@+id/btnEdit"
            android:layout_toRightOf="@id/edtUsernameInfor"
            android:layout_below="@id/imgAvatarUser"
            android:src="@drawable/ic_baseline_edit_24"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>
        <TextView
            android:id="@+id/txtEmail"
            android:fontFamily="@font/bold"
            android:layout_below="@id/edtUsernameInfor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtGender"
            android:fontFamily="@font/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@id/txtEmail"
            android:layout_centerHorizontal="true"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChangePassword"
            android:text="change password"
            android:background="@drawable/custom_login_button"
            android:padding="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/btnSignOut"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignOut"
            android:text="Log Out"
            android:background="@drawable/custom_login_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>